rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to property images
    match /properties/{propertyId}/{imageId} {
      allow read: if true;
    }

    // Allow brokers and admins to upload property images
    match /properties/{propertyId}/{imageId} {
      allow write: if request.auth != null && (get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'broker' || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Allow users to upload to their own profile folder
    match /users/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read their own files
    match /users/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Admins have full access
    match /{allPaths=**} {
      allow read, write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}